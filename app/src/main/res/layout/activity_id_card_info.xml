<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="姓名"
                    android:textSize="15sp"
                    android:textColor="@color/black25PercentColor"/>

                <EditText
                    android:id="@+id/nameTextView"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black25PercentColor"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:background="@color/jx_label_text_minor"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <LinearLayout
                android:id="@+id/sexLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="性别"
                    android:textSize="15sp"
                    android:textColor="@color/black25PercentColor"/>

                <EditText
                    android:id="@+id/sexExplain"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black25PercentColor"
                    android:gravity="end"/>
            </LinearLayout>

            <View
                android:background="@color/jx_label_text_minor"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <LinearLayout
                android:id="@+id/nationLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="民族"
                    android:textSize="15sp"
                    android:textColor="@color/black25PercentColor"/>

                <EditText
                    android:id="@+id/nationExplain"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black25PercentColor"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:background="@color/jx_label_text_minor"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <LinearLayout
                android:id="@+id/idNoLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="身份证号"
                    android:textSize="15sp"
                    android:textColor="@color/black25PercentColor"/>

                <EditText
                    android:id="@+id/idNoExplain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black25PercentColor"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:background="@color/jx_label_text_minor"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <LinearLayout
                android:id="@+id/birthdayLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="出生日期"
                    android:textSize="15sp"
                    android:textColor="@color/black25PercentColor"/>

                <EditText
                    android:id="@+id/birthdayExplain"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black25PercentColor"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:background="@color/jx_label_text_minor"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <LinearLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="详细地址"
                    android:textSize="15sp"
                    android:textColor="@color/black25PercentColor"/>

                <EditText
                    android:id="@+id/addressExplain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black25PercentColor"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:background="@color/jx_label_text_minor"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <ImageView
                android:id="@+id/idFrontImageView"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/idHeaderImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/next"
        android:text="下一步"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@color/home_num_color"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</LinearLayout>