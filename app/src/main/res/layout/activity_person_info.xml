        <LinearLayout
            android:id="@+id/workTypeLayout"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="工种"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/person_bul_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:text="*"/>

            <EditText
                android:id="@+id/workTypeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="none"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/person_black50_color"
                android:text="请选择工种"
                android:gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="6dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/right_arrow"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/person_gray_color"/>

        <LinearLayout
            android:id="@+id/entranceDateLayout"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="进场日期"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/person_bul_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:text="*"/>

            <EditText
                android:id="@+id/entranceDateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="none"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/person_black50_color"
                android:text="请选择进场日期"
                android:gravity="end"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/right_arrow"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/person_gray_color"/>

        <LinearLayout
            android:id="@+id/phoneLayout"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="手机号码"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/person_bul_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:text="*"/>

            <EditText
                android:id="@+id/phoneTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/person_black50_color"
                android:hint="请输入正确的手机号码"
                android:gravity="end"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/right_arrow"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/person_gray_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="是否班组长"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/person_bul_color"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/leaderSwitch"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswTintColor="@color/person_bul_color">
            </com.kyleduo.switchbutton.SwitchButton>

        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="确认提交"
            android:enabled="false"
            android:background="@drawable/typing_selector"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
