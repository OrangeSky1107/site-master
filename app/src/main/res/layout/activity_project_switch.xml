<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.ProjectSwitchActivity"
    android:background="@color/project_white_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/home_num_color"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/toorbar_back"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:paddingRight="3dp" />

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_bar_background"
            android:textColorHint="@color/person_dark_gray_color"
            android:inputType="text|textPostalAddress"
            android:maxLines="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:imeOptions="actionSearch"
            android:textColor="@color/person_dark_black"
            android:textSize="14sp"
            android:drawablePadding="6dp"
            android:textCursorDrawable="@null"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/searchMaskView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="搜索项目"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:drawableStart="@drawable/search"
            android:drawablePadding="6dp"
            android:layout_centerInParent="true"
            android:textColor="@color/person_dark_gray_color"
            android:textSize="14sp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

</LinearLayout>
