<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/home_num_color</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--屏幕方向（纵向）-->
<!--        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>-->
<!--        <item name="android:screenOrientation">portrait</item>-->
        <!--状态栏4.4-->
<!--        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="LoginAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/home_num_color</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--屏幕方向（纵向）-->
        <item name="android:screenOrientation">portrait</item>
        <!--状态栏4.4-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>

        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- switch button -->
    <declare-styleable name="SwitchButton"><attr format="reference" name="kswThumbDrawable"/>
        <attr format="color|reference" name="kswThumbColor"/><attr format="dimension|reference" name="kswThumbMargin"/>
        <attr format="dimension|reference" name="kswThumbMarginTop"/><attr format="dimension|reference" name="kswThumbMarginBottom"/>
        <attr format="dimension|reference" name="kswThumbMarginLeft"/><attr format="dimension|reference" name="kswThumbMarginRight"/>
        <attr format="dimension|reference" name="kswThumbWidth"/><attr format="dimension|reference" name="kswThumbHeight"/>
        <attr format="dimension|reference" name="kswThumbRadius"/><attr format="dimension|reference" name="kswBackRadius"/>
        <attr format="reference" name="kswBackDrawable"/><attr format="color|reference" name="kswBackColor"/>
        <attr format="boolean" name="kswFadeBack"/><attr format="float" name="kswThumbRangeRatio"/>
        <attr format="integer" name="kswAnimationDuration"/><attr format="color|reference" name="kswTintColor"/>
        <attr format="string" name="kswTextOn"/><attr format="string" name="kswTextOff"/><attr format="dimension" name="kswTextThumbInset"/>
        <attr format="dimension" name="kswTextExtra"/><attr format="dimension" name="kswTextAdjust"/>
    </declare-styleable>

    <!-- person tab layout-->
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- pop layout from up to down -->
    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!-- pop layout from down to up  -->
    <style name="pop_down_to_up" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_delete_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_delete_exit</item>
    </style>

</resources>
